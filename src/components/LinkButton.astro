---
interface Props {
		link: string,
		title: string,
};
const { link, title } = Astro.props;
---


<div class="ring-1 ring-jw rounded-md flex flex-row h-10 bg-neutral-900 gap-2 p-2">
	<div class="flex items-center hover:underline text-1 text-neutral-50"><slot /></div>
	<div class="flex items-center hover:underline text-1 text-jw text-sm font-bold"><a href={link}>{title}</a></div>
</div>
